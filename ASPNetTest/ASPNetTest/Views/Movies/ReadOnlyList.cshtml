@model ASPNetTest.ViewModels.IndexMoviesDataViewModel

@{
	ViewBag.Title = "title";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Фильмы.</h2>

<table id="movies" class="table table-bordered table-hover">
	<thead>
	<tr>
		<th>Наши фильмы</th>
		<th>Жанр</th>
	</tr>
	</thead>
	<tbody>
	</tbody>
</table>

@section scripts
{
	<script>
		$(document).ready(function() {

			var table = $("#movies").DataTable({
				ajax: {
					url: "/api/movies",
					dataSrc: ""
				},
				columns: [
					{
						data: "name"
					},
					{
						data: "genreType.name"
					}
				]

			});
		})
	</script>
}
