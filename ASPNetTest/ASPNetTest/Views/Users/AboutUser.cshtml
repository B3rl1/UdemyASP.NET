
@model ASPNetTest.Models.User
@{
	ViewBag.Title = Model.Name;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>
<ul>
	<li>@Model.MembershipType.Name - @Model.MembershipType.DiscountRate</li>
	@if(@Model.DateOfBirthDay != null)
	{
		<li>День рождения: @Model.DateOfBirthDay.Value.ToShortDateString()</li>
	}
</ul>

